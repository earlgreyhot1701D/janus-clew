# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=833162255362

# ============================================================================
# AGENTCORE CONFIGURATION
# ============================================================================
# Get these from your AWS Bedrock AgentCore deployment
AGENTCORE_AGENT_ID=your-agent-id-here
AGENTCORE_AGENT_ALIAS=LFZNSMOJVE

# ============================================================================
# AGENTCORE RESILIENCE SETTINGS
# ============================================================================
# Retry logic: max attempts and backoff timing
AGENTCORE_MAX_RETRIES=3
AGENTCORE_INITIAL_BACKOFF=1
AGENTCORE_MAX_BACKOFF=8

# Circuit breaker: fail-safe mechanism to prevent hammering failing service
AGENTCORE_CIRCUIT_BREAKER_THRESHOLD=3
AGENTCORE_CIRCUIT_BREAKER_RECOVERY=60

# Request timeout (seconds)
AGENTCORE_TIMEOUT_SECONDS=30

# Response cache TTL (seconds) - 24 hours = 86400
AGENTCORE_CACHE_TTL_SECONDS=86400

# Rate limiting: max concurrent calls to AgentCore
AGENTCORE_MAX_CONCURRENT_CALLS=2

# ============================================================================
# JANUS CLEW CONFIGURATION
# ============================================================================
JANUS_DATA_DIR=~/.janus-clew
VERBOSE=false
DEBUG=false

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
API_HOST=127.0.0.1
API_PORT=3001

FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=5173

CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=DEBUG
