# Janus Clew Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to git

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

# AWS region for Bedrock/Q
AWS_REGION=us-east-1

# AWS Builder ID email (required for Amazon Q)
AWS_BUILDER_ID_EMAIL=your-email@example.com

# ============================================================================
# JANUS CONFIGURATION
# ============================================================================

# Environment (development, production, testing)
JANUS_ENV=development

# Verbose logging
JANUS_VERBOSE=false

# Use mock data instead of real Amazon Q
JANUS_USE_MOCK=false

# Enable caching for analyses
JANUS_CACHE=true

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# API server host and port
API_HOST=127.0.0.1
API_PORT=3000

# Frontend dev server
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=5173

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# AMAZON Q CONFIGURATION
# ============================================================================

# Timeout for Amazon Q analysis (seconds)
AMAZON_Q_TIMEOUT=60

# Number of retry attempts
AMAZON_Q_RETRIES=3

# Exponential backoff multiplier
AMAZON_Q_BACKOFF=2.0

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ============================================================================
# ADVANCED (Usually don't change these)
# ============================================================================

# Data directory (stores analyses)
# JANUS_DATA_DIR=~/.janus-clew
